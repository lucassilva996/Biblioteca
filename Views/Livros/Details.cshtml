@model Biblioteca.Models.Livro


<div class="card">
    <div class="card-header">
        <h3 class="text-uppercase">Livro - Detalhes</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Titulo" class="control-label"></label>
                    <input asp-for="Titulo" class="form-control" disabled=""/>
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Descricao" class="control-label"></label>
                    <input asp-for="Descricao" class="form-control" size="180" maxlength="300" disabled=""/>
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Editora" class="control-label"></label>
                    <input asp-for="Editora" class="form-control" disabled=""/>
                    <span asp-validation-for="Editora" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="AnoPublicacao" class="control-label"></label>
                    <input asp-for="AnoPublicacao" class="form-control" disabled=""/>
                    <span asp-validation-for="AnoPublicacao" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Foto" class="control-label"></label>
                    <div class="custom-file">
                        <input asp-for="Foto" class="custom-file-input" disabled=""/>
                        <label class="custom-file-label" for="customFile">Escolha a Foto</label>
                    </div>
                    <span asp-validation-for="Foto" class="text-danger"></span>
                    <img src="~/Uploads/@Model.Foto" class="img-thumbnail" height="180" width="180" asp-append-version="true" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="DataEmprestimo" class="control-label"></label>
                    <input asp-for="DataEmprestimo" class="form-control" disabled=""/>
                    <span asp-validation-for="DataEmprestimo" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="HoraEmprestimo" class="control-label"></label>
                    <input asp-for="HoraEmprestimo" class="form-control" disabled=""/>
                    <span asp-validation-for="HoraEmprestimo" class="text-danger"></span>
                </div>
            </div>
        </div>
       
        <div class="form-group">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-info rounded-0"><i class="fa fa-pencil-alt"></i> Editar</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-danger rounded-0"><i class="fa fa-trash-alt"></i> Excluir</a>
            <a asp-action="Index" class="btn btn-sm btn-primary rounded-0"><i class="fas fa-fast-backward"></i> Voltar</a>
        </div>
    </div>
</div>

